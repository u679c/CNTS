<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cnts.system.mapper.TicketLogsMapper">
    
    <resultMap type="TicketLogs" id="TicketLogsResult">
        <result property="id"    column="id"    />
        <result property="ticketId"    column="ticket_id"    />
        <result property="action"    column="action"    />
        <result property="operatorId"    column="operator_id"    />
        <result property="remark"    column="remark"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectTicketLogsVo">
        select id, ticket_id, action, operator_id, remark, create_time from ticket_logs
    </sql>

    <select id="selectTicketLogsList" parameterType="TicketLogs" resultMap="TicketLogsResult">
        <include refid="selectTicketLogsVo"/>
        <where>  
            <if test="ticketId != null "> and ticket_id = #{ticketId}</if>
            <if test="action != null  and action != ''"> and action = #{action}</if>
            <if test="operatorId != null "> and operator_id = #{operatorId}</if>
        </where>
    </select>
    
    <select id="selectTicketLogsById" parameterType="Long" resultMap="TicketLogsResult">
        <include refid="selectTicketLogsVo"/>
        where id = #{id}
    </select>

    <insert id="insertTicketLogs" parameterType="TicketLogs" useGeneratedKeys="true" keyProperty="id">
        insert into ticket_logs
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="ticketId != null">ticket_id,</if>
            <if test="action != null and action != ''">action,</if>
            <if test="operatorId != null">operator_id,</if>
            <if test="remark != null">remark,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="ticketId != null">#{ticketId},</if>
            <if test="action != null and action != ''">#{action},</if>
            <if test="operatorId != null">#{operatorId},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateTicketLogs" parameterType="TicketLogs">
        update ticket_logs
        <trim prefix="SET" suffixOverrides=",">
            <if test="ticketId != null">ticket_id = #{ticketId},</if>
            <if test="action != null and action != ''">action = #{action},</if>
            <if test="operatorId != null">operator_id = #{operatorId},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTicketLogsById" parameterType="Long">
        delete from ticket_logs where id = #{id}
    </delete>

    <delete id="deleteTicketLogsByIds" parameterType="String">
        delete from ticket_logs where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>