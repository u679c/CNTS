<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cnts.system.mapper.TicketsMapper">
    
    <resultMap type="Tickets" id="TicketsResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="categoryId"    column="category_id"    />
        <result property="location"    column="location"    />
        <result property="imgs"    column="imgs"    />
        <result property="status"    column="status"    />
        <result property="userId"    column="user_id"    />
        <result property="adminId"    column="admin_id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectTicketsVo">
        select id, title, content, category_id, location, imgs, status, user_id, admin_id, create_by, create_time, update_by, update_time, del_flag from tickets
    </sql>

    <select id="selectTicketsList" parameterType="Tickets" resultMap="TicketsResult">
        <include refid="selectTicketsVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="location != null  and location != ''"> and location = #{location}</if>
            <if test="imgs != null  and imgs != ''"> and imgs = #{imgs}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="adminId != null "> and admin_id = #{adminId}</if>
        </where>
    </select>
    
    <select id="selectTicketsById" parameterType="Long" resultMap="TicketsResult">
        <include refid="selectTicketsVo"/>
        where id = #{id}
    </select>

    <insert id="insertTickets" parameterType="Tickets" useGeneratedKeys="true" keyProperty="id">
        insert into tickets
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="location != null">location,</if>
            <if test="imgs != null">imgs,</if>
            <if test="status != null">status,</if>
            <if test="userId != null">user_id,</if>
            <if test="adminId != null">admin_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="location != null">#{location},</if>
            <if test="imgs != null">#{imgs},</if>
            <if test="status != null">#{status},</if>
            <if test="userId != null">#{userId},</if>
            <if test="adminId != null">#{adminId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateTickets" parameterType="Tickets">
        update tickets
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="location != null">location = #{location},</if>
            <if test="imgs != null">imgs = #{imgs},</if>
            <if test="status != null">status = #{status},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="adminId != null">admin_id = #{adminId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTicketsById" parameterType="Long">
        delete from tickets where id = #{id}
    </delete>

    <delete id="deleteTicketsByIds" parameterType="String">
        delete from tickets where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>